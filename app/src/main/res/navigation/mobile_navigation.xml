<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.blockcovid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_scanner"
            app:destination="@id/navigation_scanner" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_postazioni"
            app:destination="@id/navigation_postazioni" />
    </fragment>

    <fragment
        android:id="@+id/navigation_help"
        android:name="com.example.blockcovid.ui.help.HelpFragment"
        android:label="@string/title_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.blockcovid.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.example.blockcovid.ui.scanner.ScannerFragment"
        android:label="@string/title_scanner"
        tools:layout="@layout/fragment_scanner" >
        <action
            android:id="@+id/action_navigation_scanner_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_postazioni"
        android:name="com.example.blockcovid.ui.postazioni.PostazioniFragment"
        android:label="@string/title_postazioni"
        tools:layout="@layout/fragment_postazioni" >
        <action
            android:id="@+id/action_navigation_postazioni_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_postazioni_to_navigation_prenotazioni"
            app:destination="@id/navigation_prenotazioni" />
        <action
            android:id="@+id/action_navigation_postazioni_to_navigation_postazioni2"
            app:destination="@id/navigation_postazioni2"
            app:popUpTo="@id/navigation_postazioni2"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_prenotazioni"
        android:name="com.example.blockcovid.ui.prenotazioni.PrenotazioniFragment"
        android:label="@string/title_prenotazioni"
        tools:layout="@layout/fragment_prenotazioni" >
        <action
            android:id="@+id/action_navigation_prenotazioni_to_navigation_postazioni"
            app:destination="@id/navigation_postazioni"
            app:popUpTo="@id/navigation_postazioni"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_postazioni2"
        android:name="com.example.blockcovid.ui.postazioni2.Postazioni2Fragment"
        android:label="@string/title_postazioni"
        tools:layout="@layout/fragment_postazioni" >
        <action
            android:id="@+id/action_navigation_postazioni2_to_navigation_postazioni"
            app:destination="@id/navigation_postazioni"
            app:popUpTo="@id/navigation_postazioni"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_postazioni2_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>