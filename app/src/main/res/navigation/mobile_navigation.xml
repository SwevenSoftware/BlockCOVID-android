<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sweven.blockcovid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_scanner"
            app:destination="@id/navigation_scanner" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_room1"
            app:destination="@id/navigation_room1" />
    </fragment>
    <action
        android:id="@+id/action_global_navigation_home"
        app:destination="@id/navigation_home"
        app:popUpTo="@id/navigation_home"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/navigation_help"
        android:name="com.sweven.blockcovid.ui.help.HelpFragment"
        android:label="@string/title_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.sweven.blockcovid.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <activity
        android:id="@+id/navigation_login"
        android:name="com.sweven.blockcovid.ui.login.LoginActivity"
        android:label="@string/title_login"
        tools:layout="@layout/activity_login" />
    <action android:id="@+id/action_global_navigation_login" app:destination="@id/navigation_login"/>

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.sweven.blockcovid.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />
    <action android:id="@+id/action_global_navigation_account" app:destination="@id/navigation_account"/>

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.sweven.blockcovid.ui.scanner.ScannerFragment"
        android:label="@string/title_scanner"
        tools:layout="@layout/fragment_scanner" />

    <fragment
        android:id="@+id/navigation_room1"
        android:name="com.sweven.blockcovid.ui.room1.Room1Fragment"
        android:label="@string/title_stanza1"
        tools:layout="@layout/fragment_room1" />
    <action android:id="@+id/action_global_navigation_room1" app:destination="@id/navigation_room1"/>

    <fragment
        android:id="@+id/navigation_room2"
        android:name="com.sweven.blockcovid.ui.room2.Room2Fragment"
        android:label="@string/title_stanza2"
        tools:layout="@layout/fragment_room2" />
    <action android:id="@+id/action_global_navigation_room2" app:destination="@id/navigation_room2"/>

    <fragment
        android:id="@+id/navigation_reservation"
        android:name="com.sweven.blockcovid.ui.reservation.ReservationFragment"
        android:label="@string/title_prenotazioni"
        tools:layout="@layout/fragment_reservation" >
        <argument
            android:name="deskId"
            app:argType="string"
            android:defaultValue="0" />
        <argument
            android:name="roomId"
            app:argType="string"
            android:defaultValue="default" />
    </fragment>
    <action android:id="@+id/action_global_navigation_prenotazioni" app:destination="@id/navigation_reservation"/>

    <activity
        android:id="@+id/navigation_main"
        android:name="com.sweven.blockcovid.MainActivity"
        android:label="@string/app_name"
        tools:layout="@layout/activity_main" />

    <activity
        android:id="@+id/navigation_start"
        android:name="com.sweven.blockcovid.StartActivity"
        android:label="@string/app_name"
        tools:layout="@layout/activity_start" />
</navigation>