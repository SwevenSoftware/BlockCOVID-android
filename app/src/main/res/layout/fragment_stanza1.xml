<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.otaliastudios.zoom.ZoomLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical|horizontal"
        app:transformation="centerInside"
        app:transformationGravity="auto"
        app:alignment="center"
        app:overScrollHorizontal="true"
        app:overScrollVertical="true"
        app:overPinchable="true"
        app:horizontalPanEnabled="true"
        app:verticalPanEnabled="true"
        app:zoomEnabled="true"
        app:flingEnabled="true"
        app:scrollEnabled="true"
        app:oneFingerScrollEnabled="true"
        app:twoFingersScrollEnabled="true"
        app:threeFingersScrollEnabled="true"
        app:minZoom="0.7"
        app:minZoomType="zoom"
        app:maxZoom="2.5"
        app:maxZoomType="zoom"
        app:animationDuration="280"
        app:hasClickableChildren="true"
        tools:context="com.example.blockcovid.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton00"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                android:rotation="180"
                app:layout_constraintBottom_toTopOf="@+id/imageButton04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton01"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                android:rotation="180"
                app:layout_constraintBottom_toTopOf="@+id/imageButton05"
                app:layout_constraintStart_toEndOf="@+id/imageButton00"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton02"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="64dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                android:paddingTop="10dp"
                android:rotation="180"
                app:layout_constraintBottom_toTopOf="@+id/imageButton06"
                app:layout_constraintStart_toEndOf="@+id/imageButton01"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton03"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                android:rotation="180"
                app:layout_constraintBottom_toTopOf="@+id/imageButton07"
                app:layout_constraintStart_toEndOf="@+id/imageButton02"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton04"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton00" />

            <ImageButton
                android:id="@+id/imageButton05"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                app:layout_constraintStart_toEndOf="@+id/imageButton04"
                app:layout_constraintTop_toBottomOf="@+id/imageButton01" />

            <ImageButton
                android:id="@+id/imageButton06"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="64dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                app:layout_constraintStart_toEndOf="@+id/imageButton05"
                app:layout_constraintTop_toBottomOf="@+id/imageButton02" />

            <ImageButton
                android:id="@+id/imageButton07"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                app:layout_constraintStart_toEndOf="@+id/imageButton06"
                app:layout_constraintTop_toBottomOf="@+id/imageButton03" />

            <ImageButton
                android:id="@+id/imageButton08"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="284dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton09" />

            <ImageButton
                android:id="@+id/imageButton09"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="284dp"
                android:layout_marginTop="88dp"
                android:background="@drawable/green_desk"
                android:onClick="goPrenotazioni1"
                android:rotation="180"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton06" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.otaliastudios.zoom.ZoomLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="60dp"
        android:onClick="goStanza2"
        android:text="@string/title_goStanza2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>